@model List<UserVMList>

@{
    ViewData["Title"] = "Home Page";
    int index = 1;
}

<style>
    .my-custom-scrollbar {
        position: relative;
        height: 200px;
        overflow: auto;
    }

    .table-wrapper-scroll-y {
        display: block;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1>Input</h1>
            <form asp-action="AddUser" asp-controller="Home">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email Address</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="eMail">
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername">UserName</label>
                    <input type="text" class="form-control" id="username" name="userName">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="password2" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-6">
            <h1>List</h1>
            <div class="table-wrapper-scroll-y my-custom-scrollbar">
                <table class="table table-bordered table-striped mb-0">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">E-mail</th>
                            <th scope="col">UserName</th>
                            

                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i < Model.Count+1; i++)
                        {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@Model[i-1].Email</td>
                            <td>@Model[i-1].UserName</td>
                        </tr>
                        }
                        {
                            
                            
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <hr />
    <div>
        <h3 style="text-align:center" class=@ViewBag.Cache>@ViewBag.Location</h3>
    </div>
</div>